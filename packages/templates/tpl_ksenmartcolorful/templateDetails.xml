<?xml version="1.0" encoding="utf-8"?>
<extension type="template" version="2.5" method="upgrade" client="site">
    <name>KsenMart Colorful</name>
    <version>1.0.0</version>
    <creationDate>17 Oct 2013</creationDate>
    <author>L.D.M. Co</author>
    <authorEmail>boss.ldm@gmail.com</authorEmail>
    <authorUrl>ldmco.ru</authorUrl>
    <copyright>Copyright Â© 2013 - All rights reserved.</copyright>
    <license>GNU General Public License v2.0</license>
    <description><![CDATA[]]></description>
	
	<installfile>install.php</installfile>

    <files>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>install.php</filename>
		<filename>component.php</filename>
		<filename>favicon.ico</filename>
		<filename>params.ini</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>js</folder>
		<folder>images</folder>
		<folder>html</folder>
		<folder>install</folder>
		<folder>language</folder>
	</files>

    <positions>
        <position>ks-menu</position>
        <position>ks-info-menu</position>
        <position>ks-auth</position>
        <position>ks-clrful-header-info</position>
        <position>ks-minicart</position>
        <position>ks-profile</position>
        <position>ks-categories</position>
		<position>ks-filters</position>
		<position>ks-shipping-info</position>
		<position>ks-reviews</position>
        <position>ks-search</position>
        <position>ks-breadcrumbs</position>
        <position>ks-main-banners</position>
        <position>ks-main-products-list</position>
        <position>ks-clrful-footer-info1</position>
        <position>ks-clrful-footer-info2</position>
        <position>ks-footer-copyright</position>
    </positions>
	
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_ksenmartcolorful.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_ksenmartcolorful.sys.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.tpl_ksenmartcolorful.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.tpl_ksenmartcolorful.sys.ini</language>		
	</languages>	

    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field name="site_logo" type="media" default="templates/ksenmartcolorful/images/logo.png" label="TPL_KSENMARTCOLORFUL_SITE_LOGO" />
				
				<field name="template_color" type="list" default="templates/ksenmartcolorful/css/green.css" label="TPL_KSENMARTCOLORFUL_SITE_COLOR" >
                    <option value="templates/ksenmartcolorful/css/green.css">TPL_KSENMARTCOLORFUL_SITE_COLOR_GREEN</option>
                    <option value="templates/ksenmartcolorful/css/cyan.css">TPL_KSENMARTCOLORFUL_SITE_COLOR_BLUE</option>
                    <option value="templates/ksenmartcolorful/css/orange.css">TPL_KSENMARTCOLORFUL_SITE_COLOR_ORANGE</option>
                </field>
				
				<field name="vkontakte" type="text" label="TPL_KSENMARTCOLORFUL_VK_LINK" />
				
				<field name="facebook" type="text" label="TPL_KSENMARTCOLORFUL_FB_LINK" />
				
				<field name="twitter" type="text" label="TPL_KSENMARTCOLORFUL_TW_LINK" />
				
				<field name="email" type="text" label="TPL_KSENMARTCOLORFUL_SHOP_EMAIL" />
				
				<field name="phone" type="text" label="TPL_KSENMARTCOLORFUL_SHOP_PHONE" />
				
				<field name="address" type="text" label="TPL_KSENMARTCOLORFUL_SHOP_ADDRESS" />
				
				<field name="copyright" type="editor" label="TPL_KSENMARTCOLORFUL_COPYRIGHT" filter="JComponentHelper::filterText" height="150px" />
				
            </fieldset>
        </fields>
    </config>

</extension>